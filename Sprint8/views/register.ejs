<!DOCTYPE html>
<html lang="en">
<link rel="stylesheet" href="/css/styles.css">
<link rel="stylesheet" href="/css/EstilosCarro.css">
<link rel="stylesheet" href="/css/registro.css">
<link rel="stylesheet" href="/css/style_login.css">
<%- include('partials/head.ejs') %>

    <body>
        <%- include('partials/header.ejs') %>
            <main>
                <div style="color: red;" class="errores">
                    <ul></ul>
                </div>

                <form method="POST" action="/users/register" enctype="multipart/form-data">
                    <div class="forma">
                        <label for="first_name">Nombre de usuario:</label>
                        <br>
                        <input type="text" name="first_name" id="first_name" placeholder="Nombre de su persona"
                            value="<%= locals.oldData ? oldData.first_name : null %>">
                        <% if(locals.errors && errors.first_name) { %>
                            <div class="errors-form" >
                                <%= errors.first_name.msg %>
                            </div>
                        <% } %>
                        <br>
                        <br>
                        <br>
                        <label for="last_name">Apellido de usuario:</label>
                        <br>
                        <input type="text" name="last_name" id="last_name" placeholder="Apellido de su persona"
                            value="<%= locals.oldData ? oldData.last_name : null %>">
                        <% if(locals.errors && errors.last_name) { %>
                            <div class="errors-form" >
                                <%= errors.last_name.msg %>
                            </div>
                        <% } %>
                        <br>
                        <br>
                        <br>
                        <label for="email">Email del usuario:</label>
                        <br>
                        <input type="text" name="email" id="email" placeholder="hola123@email.com"
                            value="<%= locals.oldData ? oldData.email : null %>">
                        <% if(locals.errors && errors.email) { %>
                            <div class="errors-form" >
                                <%= errors.email.msg %>
                            </div>
                        <% } %>
                        <br>
                        <br>
                        <br>
                        <label for="password">Crea una contrase√±a</label>
                        <br>
                        <input type="password" name="password" id="password">
                        <% if(locals.errors && errors.password) { %>
                            <div class="errors-form" >
                                <%= errors.password.msg %>
                            </div>
                        <% } %>
                        <br>
                        <br>
                        <br>
                        <label for="userAvatar">Agrega una foto de usuario:</label>
                        <br>
                        <input type="file" name="userAvatar" id="userAvatar">
                        <% if(locals.errors && errors.userAvatar) { %>
                            <div class="errors-form" >
                                <%= errors.userAvatar.msg %>
                            </div>
                        <% } %>
                        <br>
                        <br>
                        <br>

                        <form method="post" action="/users/register">
                            <button type="submit">Enviar</button>
                        </form>
                        <button type="reset">Borrar</button>
                    </div>
                </form>
            </main>

            <script src="/js/register.js"></script>

            <%- include('partials/footer.ejs') %>
    </body>

</html>