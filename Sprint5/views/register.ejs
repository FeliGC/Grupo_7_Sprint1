<!DOCTYPE html>
<html lang="en">
<link rel="stylesheet" href="/css/styles.css">
<link rel="stylesheet" href="/css/EstilosCarro.css">
<link rel="stylesheet" href="/css/registro.css">
<%- include('partials/head.ejs') %>

    <body>
        <%- include('partials/header.ejs') %>
            <main>
                <form method="POST" action="/users/register" enctype="multipart/form-data">
                    <div class="forma">
                        <label for="firstName">Nombre de usuario:</label>
                        <br>
                        <input type="text" name="firstName" id="firstName" placeholder="Nombre de su persona"
                            value="<%= locals.oldData ? oldData.firstName : null %>">
                        <% if(locals.errors && errors.firstName) { %>
                            <div class="errors-form" >
                                <%= errors.firstName.msg %>
                            </div>
                        <% } %>
                        <br>
                        <br>
                        <br>
                        <label for="lastName">Apellido de usuario:</label>
                        <br>
                        <input type="text" name="lastName" id="lastName" placeholder="Apellido de su persona"
                            value="<%= locals.oldData ? oldData.lastName : null %>">
                        <% if(locals.errors && errors.lastName) { %>
                            <div class="errors-form" >
                                <%= errors.lastName.msg %>
                            </div>
                        <% } %>
                        <br>
                        <br>
                        <br>
                        <label for="email">Email del usuario:</label>
                        <br>
                        <input type="text" name="email" id="email" placeholder="hola123@email.com"
                            value="<%= locals.oldData ? oldData.email : null %>">
                        <% if(locals.errors && errors.email) { %>
                            <div class="errors-form" >
                                <%= errors.email.msg %>
                            </div>
                        <% } %>
                        <br>
                        <br>
                        <br>
                        <label for="birthday">Fecha de nacimiento:</label>
                        <br>
                        <input type="date" name="birthday" id="birthday">
                        <br>
                        <br>
                        <br>
                        <label for="location">Lugar de residencia:</label>
                        <br>
                        <input type="text" name="location" id="location" placeholder="Example: AV Siempre Viva 19">
                        <br>
                        <br>
                        <br>
                        <label for="password">Crea una contraseña</label>
                        <br>
                        <input type="password" name="password" id="password">
                        <% if(locals.errors && errors.password) { %>
                            <div class="errors-form" >
                                <%= errors.password.msg %>
                            </div>
                        <% } %>
                        <br>
                        <br>
                        <br>
                        <label for="confirmPassword">Confirma la contraseña</label>
                        <br>
                        <input type="password" name="confirmPassword" id="confirmPassword">
                        <% if(locals.errors && errors.confirmPassword) { %>
                            <div class="errors-form" >
                                <%= errors.confirmPassword.msg %>
                            </div>
                        <% } %>
                        <br>
                        <br>
                        <br>
                        <label for="userAvatar">Agrega una foto de usuario (Opcional):</label>
                        <br>
                        <input type="file" name="userAvatar" accept=".jpg" multiple id="userAvatar">
                        <br>
                        <br>
                        <br>

                        <form method="post" action="/users/register">
                            <button type="submit">Enviar</button>
                        </form>
                        <form>
                            <button type="reset">Borrar</button>
                        </form>
                    </div>
                </form>
            </main>
            <%- include('partials/footer.ejs') %>
    </body>

</html>